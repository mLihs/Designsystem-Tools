{
  "name": "designsystem-tools",
  "description": "A small plugin that helps us make our design system better. ❤️",
  "version": "0.3.2",
  "license": "MIT",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "Designsystem Tools",
    "manifest": "src/manifest.json",
    "main": "designsystem-tools.sketchplugin",
    "appcast": "https://raw.githubusercontent.com/mLihs/Designsystem-Tools/master/.appcast.xml",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.8.0"
  },
  "author": "atomatic <mail@martin-lihs.com>"
}